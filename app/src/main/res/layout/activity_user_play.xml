<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserPlayActivity"
    android:layout_margin="@dimen/layout_margin"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_user_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:textColor="@color/black"
        android:text="Round 1/ 5"
        android:textSize="@dimen/title_size"
        android:gravity="center"></TextView>

       <TextView
           android:id="@+id/txt_gametimer"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="00:30"
           android:paddingTop="@dimen/view_padding"
           android:textColor="@color/black"/>

          <ImageView
              android:paddingTop="@dimen/view_padding"
              android:id="@+id/img_animal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" />

            <EditText
                android:paddingTop="@dimen/view_padding"
                android:id="@+id/edit_guess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/answer_hint"
                android:gravity="center"
                android:textColor="@color/black"/>

              <Button
                  android:paddingTop="@dimen/view_padding"
                  android:id="@+id/btn_submit"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="@string/submit"
                  android:textColor="@color/black"
                  android:textSize="@dimen/title_size"></Button>


</LinearLayout>